<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:android   = "http://schemas.android.com/apk/res/android"
		xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.studentvoice.app"
        version     = "0.2.0" >
<gap:config-file platform="android" parent="/manifest/application" >
	<application android:debuggable="false" android:hardwareAccelerated="true" />
	<activity android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />

</gap:config-file>
<gap:plugin name="de.appplant.cordova.plugin.email-composer" version="0.8.2" />
<gap:plugin name="br.com.paveisitemas.splashscreen" version="2.1.1" />
<!-- <gap:plugin name="com.telerik.sendgrid" version="1.0.4">
    <param name="API_USER" value="..." />
    <param name="API_KEY" value="..." />
</gap:plugin> -->

<gap:splash src="images/splash.png" gap:platform="android" />
<preference name="SplashScreen" value="splash" /> 
<preference name="SplashScreenDelay" value="4000" /> 
<preference name="SplashMaintainAspectRatio" value="true" /> 
   
<platform name="android"> 
<splash src="res/screen/android/splash.png" />
<!--<splash src="res/screen/android/splash.png" density="land-hdpi"/>
<splash src="res/screen/android/splash.png" density="land-ldpi"/>
<splash src="res/screen/android/splash.png" density="land-mdpi"/>
<splash src="res/screen/android/splash.png" density="land-xhdpi"/>  -->
 </platform> 
 
<icon src="images/icon.png" />
<preference name='phonegap-version' value='cli-5.1.1' />
<preference name="android-minSdkVersion" value="13" />
<preference name="android-targetSdkVersion" value="22" />
<preference name="permissions" value="none"/>
<preference name="Fullscreen" value="true" />
<name>Student Voice</name>
<description>Student-Voice development application build.</description>
<author href="https://github.com/HalfbeardStudios/Student-Voice/wiki" email="halfbeardstudios@gmail.com"> Ali Hamieh, Arian Jahiri, Vincent Bergonia </author>
</widget>
